{
    "project": {
        "name": "Simple Logistics"
    },
    "server": {
        "port": 3002,
        "host": "127.0.0.1"
    },
    "db": {
        "uri": "mongodb://localhost/sl_db",
        "options": {}
    },
    "log4js": {
        "appenders": [
            {
                "type": "console"
            },
            {
                "type": "file",
                "filename": "logging.log"
            }
        ]
    },
    "auth": {
      "saltRounds": 9,
      "tokenLength": 32,
      "rememberShort": 86400000,
      "rememberLong": 604800000
    }
}